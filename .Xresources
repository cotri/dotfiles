!! Urxvt config
URxvt.font: xft:UbuntuMono Nerd Font Mono:pixelsize=14, \
			xft:FontAwesome:style=Regular:pixelsize=14

URxvt.background: 		#1b1b1b
URxvt.depth: 			32
!URxvt.borderless: 		1
URxvt.internalBorder: 	20
URxvt.scrollBar: 		false
URxvt.saveLines:  		2000
URxvt.transparent:      false
! URxvt*.shading: 		10
! URxvt.loginShell: 	true
! URxvt.url-launcher: 	/usr/bin/xdg-open

!! perl extensions
URxvt.perl-ext-common: 	default,url-select,clipboard,resize-font

!! url-select (part of urxvt-perls package)
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.url-select.autocopy:  true
URxvt.url-select.button:    2
URxvt.url-select.launcher:  xdg-open
URxvt.url-select.underline: true

!! url-select
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy

!! resize-font
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
!URxvt.keysym.C-question:  resize-font:show

!! Cursor word movement
!URxvt*altSendsEscape: true
URxvt.keysym.Control-Up:	\033[1;5A
URxvt.keysym.Control-Down:	\033[1;5B
URxvt.keysym.Control-Left:	\033[1;5D
URxvt.keysym.Control-Right:	\033[1;5C

!! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false
